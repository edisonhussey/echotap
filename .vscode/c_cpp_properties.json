{
  "configurations": [
    {
      "name": "Mac",
      "includePath": [
        "${workspaceFolder}/**",
        "/opt/homebrew/include",                 
        "${workspaceFolder}/glad/include",     
        "/usr/local/include",                     
        "/Library/Developer/CommandLineTools/usr/include/c++/v1",
        "/opt/homebrew/opt/glfw",
        "/opt/homebrew/opt/glfw/include",
        "/opt/homebrew/opt/freetype/include/freetype2"
      ],
      "defines": [],
      "macFrameworkPath": [
        "/System/Library/Frameworks",
        "/Library/Frameworks"
      ],
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c17",
      "cppStandard": "c++17",
      "intelliSenseMode": "macos-clang-x64",
      "browse": {
        "path": [
          "${workspaceFolder}",
          "/opt/homebrew/include",
          "${workspaceFolder}/glad/include",
          "/opt/homebrew/opt/glfw/include"
        ],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": ""
      }
    }
  ],
  "version": 4
}
